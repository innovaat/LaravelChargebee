{
    "name": "tijmen-wierenga/laravel-chargebee",
    "type": "library",
    "description": "A Laravel package which provides an easy way to handle billing and subscriptions.",
    "keywords": [
        "TijmenWierenga",
        "Chargebee",
        "Laravel",
        "Cashier",
        "Subscription"
    ],
    "homepage": "https://github.com/TijmenWierenga/LaravelChargebee",
    "license": "MIT",
    "authors": [
        {
            "name": "Tijmen Wierenga",
            "email": "tijmen@floown.com",
            "homepage": "https://www.floown.com",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "^8.0",
        "illuminate/database": "^8.0",
        "illuminate/console": "^8.0",
        "php" : "^7.3",
        "chargebee/chargebee-php": "^2.7.9",
        "stripe/stripe-php": "^7.67.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^9.3.3"
    },
    "autoload": {
        "psr-4": {
            "TijmenWierenga\\LaravelChargebee\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TijmenWierenga\\LaravelChargebee\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "../../bin/phpunit --colors"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
